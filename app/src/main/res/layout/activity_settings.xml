<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/forest_summer"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <SeekBar
        android:id="@+id/volume_set"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_volume"
        android:layout_centerInParent="true"
        android:background="@drawable/white_bg"

        android:layout_marginTop="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:id="@+id/settings"
        android:background="@drawable/white_bg"

        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/volume_settings"
        android:textSize="25sp"
        android:layout_below="@+id/settings"
        android:background="@drawable/white_bg"
        android:layout_marginTop="25sp"
        android:textColor="@color/black"
        android:id="@+id/settings_volume"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volume_text"
        android:layout_below="@+id/settings_volume"
        android:layout_marginRight="40dp"
        android:textColor="@color/black"
        android:background="@drawable/white_bg"
        android:layout_toRightOf="@+id/volume_set"
        android:layout_marginTop="25sp" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:layout_below="@+id/type_of_anim_text"
        android:layout_marginTop="25sp"
        android:id="@+id/switch_anim"
        android:layout_centerInParent="true"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/type_of_anim_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volume_set"
        android:layout_centerInParent="true"
        android:layout_marginTop="25sp"
        android:background="@drawable/white_bg"
        android:text="@string/type_of_spawning_text"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_anim_value_text"
        android:layout_below="@+id/type_of_anim_text"
        android:layout_marginRight="40dp"
        android:textColor="@color/black"
        android:background="@drawable/white_bg"
        android:layout_toRightOf="@+id/volume_set"
        android:layout_marginTop="25sp" />


</RelativeLayout>