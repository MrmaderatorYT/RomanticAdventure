<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- рожевий колір -->
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- білий колір за замовчуванням -->
                </shape>
            </item>
            <item android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FF4081" /> <!-- рожева лінія зверху -->
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FF4081" /> <!-- рожева лінія знизу-->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
